{
	"compileOnSave": false,
	"compilerOptions": {
		"outDir": "./dist/out-tsc",
		"sourceMap": true,
		"declaration": false,
		"moduleResolution": "node",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"target": "es5",
		"baseUrl": ".",
		"paths": {
			"@app/*": [
				"src/app/*"
			],
			"@app/entity/*": [
				"../entity/*"
			],
			"@app/env": [
				"src/environments/environment"
			]
		},
		"typeRoots": [
			"node_modules/@types"
		],
		"lib": [
			"es2017",
			"dom"
		]
	}
}